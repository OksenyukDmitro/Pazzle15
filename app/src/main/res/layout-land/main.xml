<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
   >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/restartGame"
            style="@style/MyButton"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginEnd="60dp"


            android:layout_marginStart="60dp"
            android:layout_span="4"
            android:onClick="restartTable"
            android:text="@string/gameRestart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/loadGame"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/saveGame"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />




        <Button
            android:id="@+id/loadGame"
            style="@style/MyButton"
            android:layout_width="160dp"
            android:layout_height="47dp"
            android:onClick="LoadArray"
            android:text="@string/landLoadArray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/restartGame"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/saveGame"
            style="@style/MyButton"
            android:layout_width="160dp"
            android:layout_height="47dp"
            android:onClick="SaveArray"
            android:text="@string/saveArray"
            app:layout_constraintEnd_toStartOf="@+id/restartGame"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>


